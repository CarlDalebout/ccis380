#------------------------------------------------------------------------------
# Makefile for main.exe
# Y. Liow
#------------------------------------------------------------------------------
# Macros
#------------------------------------------------------------------------------
CXX 		= g++
CXXFLAGS 	= -g -Wall
LINK 		= g++
LINKFLAGS 	= -lGL -lGLU -lglut -lGLEW
OBJS 		= ../../../a/mygllib/config.o \
					../../../a/mygllib/View.o \
					main.o
EXE 		= main.exe
#------------------------------------------------------------------------------
# Executable
#------------------------------------------------------------------------------
$(EXE): 	$(OBJS)
	$(LINK) $(OBJS) -o $(EXE) $(LINKFLAGS)
#------------------------------------------------------------------------------
# Object files
#------------------------------------------------------------------------------
main.o: 	main.cpp 
	$(CXX) $(CXXFLAGS) main.cpp -c -o main.o -I ../../../a/mygllib
#------------------------------------------------------------------------------
# Utilities
#------------------------------------------------------------------------------
clean:
	rm -f $(EXE) main.o 
c:
	rm -f $(EXE) main.o 
run:
	./$(EXE)
r:
	./$(EXE)
