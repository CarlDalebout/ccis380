# Makefile for main
# Y. Liow
#------------------------------------------------------------------------------
# Macros
#------------------------------------------------------------------------------
CXX       = g++
CXXFLAGS  = -g -Wall
LINK      = g++
LINKFLAGS = -lGL -lGLU -lglut -lGLEW
OBJS      = main.o
EXE       = main.exe

#------------------------------------------------------------------------------
# Executable
#------------------------------------------------------------------------------
$(EXE):	$(OBJS)
	$(LINK) $(LINKFLAGS) $(OBJS) -o $(EXE) 

#------------------------------------------------------------------------------
# Object files
#------------------------------------------------------------------------------
main.o:	main.cpp 
	$(CXX) $(CXXFLAGS) main.cpp -c -o main.o -I../mygllib -DGL_GLEXT_PROTOTYPES

#------------------------------------------------------------------------------
# Utilities
#------------------------------------------------------------------------------
clean:
	rm $(OBJS) $(EXE)
c:
	rm $(OBJS) $(EXE)

run:
	./$(EXE)
r:
	./$(EXE)

main.jpg: $(EXE)
	xcapture --program=main.exe --filename=main.jpg
