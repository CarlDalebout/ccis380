#------------------------------------------------------------------------------
# Makefile for main.exe
# Y. Liow
#------------------------------------------------------------------------------
# Macros
#------------------------------------------------------------------------------
CXX 		= g++
CXXFLAGS 	= -g -Wall
LINK 		= g++
LINKFLAGS 	= -lGL -lGLU -lglut -lGLEW
OBJS 		= ../mygllib/config.o \
		  	  ../mygllib/View.o \
		  	  Robot.o \
		  	  main.o
EXE 		= main.exe

#------------------------------------------------------------------------------
# Executable
#------------------------------------------------------------------------------
$(EXE): 	$(OBJS)
	$(LINK) $(OBJS) -o $(EXE) $(LINKFLAGS)

#------------------------------------------------------------------------------
# Object files
#------------------------------------------------------------------------------
main.o: main.cpp Robot.h
	$(CXX) $(CXXFLAGS) main.cpp -c -o main.o -I ../mygllib/
Robot.o: Robot.cpp Robot.h
	$(CXX) $(CXXFLAGS) Robot.cpp -c -o Robot.o -I ../mygllib/

#------------------------------------------------------------------------------
# Utilities
#------------------------------------------------------------------------------
clean:
	rm -f $(EXE) main.o Robot.o
c:
	rm -f $(EXE) main.o Robot.o
run:
	./$(EXE)
r:
	./$(EXE)